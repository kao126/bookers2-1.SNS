<% if user_signed_in? %>
  <div class="search_form">
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <%= f.text_field :word, autocomplete: 'off' %>
      <%= f.select :range, options_for_select([['User'], ['Book']]) %>
      <%= f.select :serach, options_for_select({"完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial"}) %>
      <%= f.submit '検索' %>
    <% end %>
  </div>
<% end %>